@{
    ViewData["Title"] = "Registration";
}
@model Account
<div>
    <h2>Register</h2>
    <h4><a href="/login" style="float:right;">Already a Member?</a></h4>
    <form action="/regCheck" method="post" class="col-6">
    	<div class="form-group">
    		<label>First Name</label>
    		<span asp-validation-for="FirstName" style="color: red;"></span>
    		<input asp-for="FirstName" class="form-control">
    	</div>
    	<div class="form-group">
    		<label>Last Name</label>
    		<span asp-validation-for="LastName" style="color: red;"></span>
    		<input asp-for="LastName" class="form-control">
    	</div>
    	<div class="form-group">
    		<label>Email</label>
    		<span asp-validation-for="Email" style="color: red;"></span>
    		<input asp-for="Email" class="form-control">
    	</div>
    	<div class="form-group">
    		<label>Password</label>
    		<span asp-validation-for="Password" style="color: red;"></span>
    		<input asp-for="Password" class="form-control">
    	</div>
    	<div class="form-group">
    		<label>Confirm Password</label>
    		<span asp-validation-for="Confirm" style="color: red;"></span>
    		<input asp-for="Confirm" class="form-control">
    	</div>
    	<input type="submit" class="btn btn-primary" value="Register">
    </form>
</div>
